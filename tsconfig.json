{
  "compilerOptions": {
    /* Target & Module */
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    /* Struktur Build - INI YANG DIPERBAIKI */
    "rootDir": "./src" /* ðŸ‘ˆ Ubah dari "." menjadi "./src" */,
    "outDir": "./dist",
    "sourceMap": true,

    /* Strictness */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    /* Interop & Runtime */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,

    /* Performance */
    "skipLibCheck": true,
    "isolatedModules": true,

    /* Lint-friendly */
    "noUnusedLocals": false,
    "noUnusedParameters": false,

    /* Decorators */
    "experimentalDecorators": false,
    "emitDecoratorMetadata": false
  },

  /* Include & Exclude */
  /* ðŸ‘ˆ Hapus "prisma" dari sini agar tidak error "File not under rootDir" */
  "include": ["src/**/*.ts"],

  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "generated",
    "src/generated",
    "prisma" /* ðŸ‘ˆ Tambahkan prisma ke exclude build production */,
    "**/*.d.ts",
    "**/__test__/**/*",
    "**/*.test.ts"
  ],
  "types": ["vitest/globals"]
}
